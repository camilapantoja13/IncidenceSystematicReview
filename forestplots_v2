df_reg <- df %>%
  mutate(
    region_group = case_when(
      str_detect(region, "(?i)USA|United States|Cincinnati|Manhattan|ARIC|CARDIA|WHI|HCUP|SHS") ~ "North America",
      str_detect(region, "(?i)UK|United Kingdom|England|Bradford|Denmark|Norway|CVDNOR")        ~ "Europe",
      str_detect(region, "(?i)Singapore|Qatar|Doha|Hamad|HGH")                                  ~ "Asia & Middle East",
      str_detect(region, "(?i)New Zealand|Auckland|ARCOS|Australia|SAINTSS")                   ~ "Oceania",
      TRUE ~ "Other/Unclear"
    ),
    region_group = factor(region_group, levels = c("North America","Europe","Asia & Middle East","Oceania","Other/Unclear"))
  ) %>%
  arrange(region_group, study, author_year)


library(ggplot2)
library(dplyr)
library(glue)
library(patchwork)

# ---------- 0) Make a unique key to avoid many-to-many ----------
# 1) Make a unique key in df
df <- df %>%
  mutate(key = paste(author_year, study, comparison, sep = " | "))

# 2) Build reported_keys with the same key
# (Re)create your reported_keys table
reported_keys <- tribble(
  ~author_year, ~study, ~comparison, ~est_source,
  "Madsen 2024",      "GCNKSS",      "Black vs White",               "reported",
  "Gardener 2020",    "NOMAS",       "Black vs White",               "reported",
  "Domanski 2025",    "CARDIA (men)", "Black vs White (men)",        "reported",
  "Domanski 2025",    "CARDIA (women)", "Black vs White (women)",    "reported",
