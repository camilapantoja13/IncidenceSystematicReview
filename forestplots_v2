  "Dos Santos 2024",  "SAINTSS",     "Aboriginal vs non-Indigenous", "reported",
  "Müller 2019",      "SHS + ARIC",  "American Indian vs White women","reported",
  "Müller 2019",      "SHS + ARIC",  "American Indian vs Black women","reported",
  "Müller 2019",      "SHS + ARIC",  "American Indian vs White men", "reported",
  "Müller 2019",      "SHS + ARIC",  "American Indian vs Black men", "reported",
  "Bonnechère 2023",  "UK Biobank",  "Black vs White",               "reported"
)

# --- classify comparisons into blocks (for ordering within regions)
block_map <- function(x){
  case_when(
    grepl("Black vs White", x, ignore.case=TRUE) ~ "Black vs White",
    grepl("Hispanic|Mexican|Latino|HWAA", x, ignore.case=TRUE) ~ "Hispanic/Latino",
    grepl("Pakistani|Turkish|Iraqi|Iranian|Middle East|South|East|South-?East|Asian", x, ignore.case=TRUE) ~ "Asian & Middle-East",
    grepl("Māori|Pacific|Aboriginal|American Indian|Indigenous|Torres|SHS", x, ignore.case=TRUE) ~ "Indigenous & Pacific",
    TRUE ~ "Other"
  )
}

# tag region groups from your 'region' string (lightweight)
region_group <- function(x){
  case_when(
    grepl("USA|United States|Canada", x, TRUE) ~ "North America",
    grepl("UK|United Kingdom|England|Denmark|Norway", x, TRUE) ~ "Europe",
    grepl("Singapore|Qatar|Hamad|Doha|HGH", x, TRUE) ~ "Asia & Middle East",
    grepl("New Zealand|Auckland|ARCOS|Australia|SAINTSS", x, TRUE) ~ "Oceania",
    TRUE ~ "Other/Unclear"
  )
}

df <- df %>%
  mutate(
    region_group = region_group(region),
    block        = factor(block_map(comparison),
                          levels = c("Black vs White","Hispanic/Latino",
                                     "Asian & Middle-East","Indigenous & Pacific","Other"))
  )

# reported vs calculated (unique key prevents many-to-many)
df <- df %>% mutate(key = paste(author_year, study, comparison, sep=" | "))
reported_keys <- reported_keys %>% mutate(key = paste(author_year, study, comparison, sep=" | "))

df <- df %>%
  left_join(reported_keys %>% select(key, est_source), by="key") %>%
  mutate(est_source = if_else(is.na(est_source), "calculated", est_source))

# ---- Pool Black vs White (North America): GCNKSS, ARIC, NOMAS ----
pool_keys <- tribble(
  ~author_year,   ~study,         ~comparison,
  "Madsen 2024",  "GCNKSS",       "Black vs White",
  "Koton 2020",   "ARIC",         "Black vs White",
  "Gardener 2020","NOMAS",        "Black vs White"
) %>% mutate(key = paste(author_year, study, comparison, sep=" | "))

# pick the three rows
pool_df <- df %>%
  mutate(key = paste(author_year, study, comparison, sep=" | ")) %>%
  semi_join(pool_keys, by = "key")

# log effects & SEs
y  <- log(pool_df$effect)
se <- (log(pool_df$hi) - log(pool_df$lo)) / (2*1.96)

# fixed effect
w  <- 1/se^2
mu_fixed <- sum(w*y)/sum(w)

# DerSimonian–Laird tau^2
Q <- sum(w*(y - mu_fixed)^2)
C <- sum(w) - sum(w^2)/sum(w)
tau2 <- max(0, (Q - (length(y)-1))/C)

# random-effects pooled
w_star <- 1/(se^2 + tau2)
mu_RE  <- sum(w_star*y)/sum(w_star)
se_RE  <- sqrt(1/sum(w_star))

pooled_effect <- exp(mu_RE)
pooled_lo     <- exp(mu_RE - 1.96*se_RE)
pooled_hi     <- exp(mu_RE + 1.96*se_RE)
I2 <- max(0, (Q - (length(y)-1))/Q) * 100

# append pooled row to df
df <- bind_rows(
  df,
  tibble(
    author_year = glue("Pooled (DL, I^2={round(I2) }%)"),
    study       = "GCNKSS + ARIC + NOMAS",
    region      = "USA – pooled",
    comparison  = "Black vs White (pooled)",
    effect      = pooled_effect,
    lo          = pooled_lo,
    hi          = pooled_hi,
    rob         = "—",
    est_source  = "pooled"   # we'll style this
  )
)

# ---------- insert region headers & order within region by 'block' ----------
headers <- df %>%
  distinct(region_group) %>%
  transmute(author_year = region_group,
            study = "", region = "", comparison = "",
            effect = NA_real_, lo = NA_real_, hi = NA_real_,
            rob = "", est_source = NA_character_,
            region_group, block = factor(NA, levels = levels(df$block)),
            is_header = TRUE)

df_plot <- df %>%
  mutate(is_header = FALSE) %>%
  arrange(region_group, block, author_year) %>%
  bind_rows(headers) %>%
  arrange(region_group, desc(is_header), block, author_year) %>%
  mutate(y = rev(row_number()))

# common text for right panel
df_plot <- df_plot %>%
  mutate(
    est_ci = if_else(!is_header,
                     glue("{sprintf('%.2f', effect)} ({sprintf('%.2f', lo)}–{sprintf('%.2f', hi)})"),
                     ""),
    est_ci_tag = case_when(
      is_header ~ "",
      est_source == "reported"   ~ glue("{est_ci} [rep]"),
      est_source == "calculated" ~ glue("{est_ci} [calc]"),
      TRUE ~ ""
    )
  )

# === LEFT panel (shows headers + rows) ===
p_left <- ggplot(df_plot, aes(y=y)) +
  geom_text(data = subset(df_plot, is_header),
            aes(x=.02, label=region_group), hjust=0, size=3.6, fontface="bold")+
  geom_text(data = subset(df_plot, !is_header),
            aes(x=.02, label=author_year), hjust=0, size=3.2)+
  geom_text(data = subset(df_plot, !is_header),
            aes(x=.55, label=comparison),  hjust=0, size=3.2)+
  labs(title="All-stroke incidence by ethnicity, grouped by world region",
       subtitle="Left: Author/Comparison • Middle: Forest (log) • Right: RR (95% CI) & ROBINS-E")+
  scale_x_continuous(limits=c(0,1), breaks=NULL)+
  scale_y_continuous(NULL, breaks=NULL)+
  theme_void(base_size=11) +
  theme(plot.title=element_text(face="bold"), plot.subtitle=element_text(margin=margin(b=6)))

# === MIDDLE panel (uses same y; light separators at headers) ===
x_min <- 0.25; x_max <- 5.5
df_mid <- df_plot %>% mutate(
  lo_cap = pmax(lo, x_min),
  hi_cap = pmin(hi, x_max),
  left_overflow  = !is_header & lo < x_min,
  right_overflow = !is_header & hi > x_max
)

p_mid <- ggplot(df_mid, aes(y=y)) +
  geom_hline(data=subset(df_plot, is_header),
             aes(yintercept=y), colour="grey85", linewidth=.4)+
  geom_segment(data=subset(df_mid, !is_header),
               aes(x=lo_cap, xend=hi_cap, yend=y, linetype=est_source),
               linewidth=.5, colour="black") +
  geom_segment(data=subset(df_mid, left_overflow),
               aes(x=x_min, xend=lo_cap, yend=y, linetype=est_source),
               arrow=arrow(length=unit(3,"pt"), type="closed"),
               linewidth=.5, colour="black")+
  geom_segment(data=subset(df_mid, right_overflow),
               aes(x=hi_cap, xend=x_max, yend=y, linetype=est_source),
               arrow=arrow(length=unit(3,"pt"), type="closed"),
               linewidth=.5, colour="black")+
  geom_point(data=subset(df_mid, !is_header),
             aes(x=effect, shape=est_source), size=2.2, stroke=.6)+
  geom_vline(xintercept=1, linetype="dashed", colour="grey50")+
  scale_x_log10(limits=c(x_min,x_max),
                breaks=c(0.25,0.5,0.75,1,1.5,2,3,5),
                labels=scales::label_number(accuracy=0.01, trim=TRUE),
                expand=c(0,0))+
  scale_shape_manual(values=c(reported=16, calculated=1), labels=c("Reported","Calculated"))+
  scale_linetype_manual(values=c(reported="solid", calculated="22"), labels=c("Reported","Calculated"))+
  guides(linetype="none")+
  coord_cartesian(clip="off")+
  theme_minimal(base_size=11)+
  theme(axis.title=element_blank(), axis.text.y=element_blank(), axis.ticks=element_blank(),
        panel.grid.major.y=element_blank(), panel.grid.minor=element_blank(),
        plot.margin=margin(5,0,5,0), legend.position="bottom")

# === RIGHT panel (print blanks for headers so y matches exactly) ===
p_right <- ggplot(df_plot, aes(y=y)) +
  geom_text(data=subset(df_plot,  is_header),
            aes(x=.02, label=""), hjust=0, size=3.2)+
  geom_text(data=subset(df_plot, !is_header),
            aes(x=.02, label=est_ci_tag), hjust=0, size=3.2)+
  geom_text(data=subset(df_plot, !is_header),
            aes(x=.70, label=rob),       hjust=0, size=3.2)+
  scale_x_continuous(limits=c(0,1), breaks=NULL)+
  scale_y_continuous(NULL, breaks=NULL)+
  theme_void(base_size=11)

final_plot <- p_left + p_mid + p_right +
  patchwork::plot_layout(widths=c(0.9,1.1,0.6))
final_plot





