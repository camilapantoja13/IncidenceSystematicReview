reported_keys <- tribble(
  ~author_year,       ~study,         ~comparison,                         ~est_source,
  "Madsen 2024",      "GCNKSS",       "Black vs White",                    "reported",
  "Gardener 2020",    "NOMAS",        "Black vs White",                    "reported",
  "Domanski 2025",    "CARDIA (men)", "Black vs White (men)",              "reported",
  "Domanski 2025",    "CARDIA (women)","Black vs White (women)",           "reported",
  "Mkoma 2021",       "Denmark",      "Pakistani vs Danish-born",          "reported",
  "Mkoma 2021",       "Denmark",      "Turkish vs Danish-born",            "reported",
  "Mkoma 2021",       "Denmark",      "Iraqi vs Danish-born",              "reported",
  "Mkoma 2021",       "Denmark",      "Iranian vs Danish-born",            "reported",
  "Calancie 2024",    "WHI",          "HWAA vs NH White (women)",          "reported",
  "Balabanski 2023",  "Australia",    "Aboriginal vs non-Aboriginal (women)","reported",
  "Balabanski 2023",  "Australia",    "Aboriginal vs non-Aboriginal (men)","reported",
  "Balabanski 2020",  "Australia",    "Aboriginal vs non-Aboriginal",      "reported",
  "Balabanski 2018",  "Australia",    "Aboriginal vs non-Aboriginal",      "reported",
  "Dos Santos 2024",  "SAINTSS",      "Aboriginal vs non-Indigenous",      "reported",
  "Müller 2019",      "SHS + ARIC",   "American Indian vs White women",    "reported",
  "Müller 2019",      "SHS + ARIC",   "American Indian vs Black women",    "reported",
  "Müller 2019",      "SHS + ARIC",   "American Indian vs White men",      "reported",
  "Müller 2019",      "SHS + ARIC",   "American Indian vs Black men",      "reported",
  "Bonnechère 2023",  "UK Biobank",   "Black vs White",                    "reported"
) %>%
  mutate(key = paste(author_year, study, comparison, sep = " | ")) %>%
  select(key, est_source) %>%
  distinct()

# 3) Join by the unique key (no more many-to-many)
df_plot <- df %>%
  left_join(reported_keys, by = "key") %>%
  mutate(
    est_source = if_else(is.na(est_source), "calculated", est_source),
    y          = rev(row_number()),
    est_ci     = glue("{sprintf('%.2f', effect)} ({sprintf('%.2f', lo)}–{sprintf('%.2f', hi)})"),
    est_ci_tag = if_else(est_source == "reported",
                         glue("{est_ci} [rep]"),
                         glue("{est_ci} [calc]"))
  )

  # --- 1) Tag each row with a region group (from your 'region' column) ---
region_levels <- c("North America","Europe","Asia & Middle East","Oceania","Other/Unclear")

df_plot <- df_plot %>%  # <- this is the object you already created after joining reported_keys
  mutate(
    region_group = case_when(
      grepl("USA|United States|Canada", region, ignore.case = TRUE) ~ "North America",
      grepl("UK|United Kingdom|England|Denmark|Norway", region, TRUE) ~ "Europe",
      grepl("Singapore|Qatar|Hamad|Doha|HGH", region, TRUE) ~ "Asia & Middle East",
      grepl("New Zealand|Auckland|ARCOS|Australia|SAINTSS", region, TRUE) ~ "Oceania",
      TRUE ~ "Other/Unclear"
    ),
    region_group = factor(region_group, levels = region_levels)
  )
  
# --- 2) Insert header rows per region and recompute y ---
headers <- df_plot %>%
  distinct(region_group) %>%
  transmute(
    author_year = as.character(region_group),
    study = "", region = "", comparison = "",
    effect = NA_real_, lo = NA_real_, hi = NA_real_,
    rob = "", est_source = NA_character_,
    region_group, is_header = TRUE
  )

df_plot <- bind_rows(df_plot %>% mutate(is_header = FALSE), headers) %>%
  arrange(region_group, desc(is_header), author_year, comparison) %>%
  mutate(y = rev(row_number()))

# --- 3) LEFT panel (now shows region headers) ---
p_left <- ggplot(df_plot, aes(y = y)) +
  geom_text(data = subset(df_plot, is_header),
            aes(x = 0.02, label = as.character(region_group)),
            hjust = 0, size = 3.6, fontface = "bold") +
  geom_text(data = subset(df_plot, !is_header),
            aes(x = 0.02, label = author_year),
            hjust = 0, size = 3.2, colour = "black") +
  geom_text(data = subset(df_plot, !is_header),
            aes(x = 0.55, label = comparison),
            hjust = 0, size = 3.2, colour = "black") +
  labs(
    title   = "All-stroke incidence by ethnicity, grouped by world region",
    subtitle= "Left: Author / Comparison • Middle: Forest (log) • Right: RR (95% CI) & ROBINS-E | ● reported, ○ calculated"
  ) +
  scale_x_continuous(limits = c(0, 1), breaks = NULL) +
  scale_y_continuous(NULL, breaks = NULL) +
  theme_void(base_size = 11) +
  theme(plot.title = element_text(face = "bold"),
        plot.subtitle = element_text(margin = margin(b = 6)))

# --- 4) MIDDLE panel (treat headers as blank separators) ---
x_min <- 0.25; x_max <- 5.5
df_mid <- df_plot %>%
  mutate(
    x      = effect,
    lo_cap = pmax(lo, x_min),
    hi_cap = pmin(hi, x_max),
    left_overflow  = !is_header & !is.na(lo) & lo < x_min,
    right_overflow = !is_header & !is.na(hi) & hi > x_max
  )

p_mid <- ggplot(df_mid, aes(y = y)) +
  geom_hline(data = subset(df_plot, is_header),
             aes(yintercept = y), colour = "grey85", linewidth = 0.4) +
  geom_segment(data = subset(df_mid, !is_header),
               aes(x = lo_cap, xend = hi_cap, yend = y, linetype = est_source),
               linewidth = 0.5, colour = "black") +
  geom_segment(data = subset(df_mid, left_overflow),
               aes(x = x_min, xend = lo_cap, yend = y, linetype = est_source),
               arrow = arrow(length = unit(3, "pt"), type = "closed"),
               linewidth = 0.5, colour = "black") +
  geom_segment(data = subset(df_mid, right_overflow),
               aes(x = hi_cap, xend = x_max, yend = y, linetype = est_source),
               arrow = arrow(length = unit(3, "pt"), type = "closed"),
               linewidth = 0.5, colour = "black") +
  geom_point(data = subset(df_mid, !is_header),
             aes(x = x, shape = est_source),
             size = 2.2, colour = "black", stroke = 0.6) +
  geom_vline(xintercept = 1, linetype = "dashed", colour = "grey50") +
  scale_x_log10(limits = c(x_min, x_max),
                breaks = c(0.25,0.5,0.75,1,1.5,2,3,5),
                labels = scales::label_number(accuracy = 0.01, trim = TRUE),
                expand = c(0,0)) +
  scale_shape_manual(values = c(reported = 16, calculated = 1),
                     labels = c("Reported","Calculated"), name = "Estimate source") +
  scale_linetype_manual(values = c(reported = "solid", calculated = "22"),
                        labels = c("Reported","Calculated"), name = "Estimate source") +
  guides(linetype = "none") +
  coord_cartesian(clip = "off") +
  theme_minimal(base_size = 11) +
  theme(axis.title = element_blank(),
        axis.text.y = element_blank(),
        axis.ticks  = element_blank(),
        panel.grid.major.y = element_blank(),
        panel.grid.minor   = element_blank(),
        plot.margin = margin(5, 0, 5, 0),
        legend.position = "bottom")

# --- 5) RIGHT panel (blank on headers) ---
p_right <- ggplot(df_plot, aes(y = y)) +
  geom_text(data = subset(df_plot, !is_header),
            aes(x = 0.02, label = est_ci_tag),
            hjust = 0, size = 3.2, colour = "black") +
  geom_text(data = subset(df_plot, !is_header),
            aes(x = 0.70, label = rob),
            hjust = 0, size = 3.2, colour = "black") +
  scale_x_continuous(limits = c(0, 1), breaks = NULL) +
  scale_y_continuous(NULL, breaks = NULL) +
  theme_void(base_size = 11)

# --- 6) Combine ---
final_plot <- p_left + p_mid + p_right +
  patchwork::plot_layout(widths = c(0.9, 1.1, 0.6))
final_plot




