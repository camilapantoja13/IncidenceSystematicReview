  "Mkoma 2021",       "Denmark",     "Iranian vs Danish-born",       "reported",
  "Calancie 2024",    "WHI",         "HWAA vs NH White (women)",     "reported",
  "Balabanski 2023",  "Australia",   "Aboriginal vs non-Aboriginal (women)", "reported",
  "Balabanski 2023",  "Australia",   "Aboriginal vs non-Aboriginal (men)",   "reported",
